<h2>Lista Categorias</h2>
<hr>
<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-3">
        <div class="card-body">
            <div class="text-start">
                <h4>{{nome}}</h4>
                <small>Slug: {{slug}}</small>
                <small>{{date}}</small>
            </div>
            <div class="text-end">
                <a href="/admin/categorias/edit/{{_id}}">
                    <button class="btn btn-warning">Editar Categoria</button>
                </a>
            </div>
        </div>
    </div>
{{else}}

{{/each}}
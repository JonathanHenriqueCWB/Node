{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Editar Categoria:</h2>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">

            <input type="hidden" id="id" name="id" value="{{categoria._id}}">

            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" class="form-control" value="{{categoria.nome}}">

            <label for="texto">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" value="{{categoria.slug}}">

            <button type="submit" class="btn btn-warning form-control mt-4">Editar</button>
        </form>
    </div>
</div>
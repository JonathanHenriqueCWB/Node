<h1>Delete Posts</h1>
<hr>

<form action="/admin/posts/delete" method="post">
    <div class="card">

    <input type="hidden" name="id" value={{post._id}}>

    <div class="card-body">
        <form method="post" action="/admin/posts/create">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
            </div>
            <div class="mb-3">
                <label for="slug" class="form-label">Slug</label>
                <input type="text" class="form-control" id="slug" name="slug" value='{{post.slug}}'>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="description" value='{{post.description}}'>
            </div>
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea name="content" id="content" cols="30" rows="10" class="form-control" >{{post.content}}</textarea>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Category</label>
                <input type="text" class="form-control" id="description" name="description" value='{{post.category.name}}'>
            </div>

            <p style="color: red">Are you sure you'd like to remove this post?</p>
            <button type="submit" class="btn btn-danger mt-4">DELETE POSTS</button><br>
        </form>
    </div>
</div>
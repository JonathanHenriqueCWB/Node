<h1>List of Posts</h1>
<hr>

<a href="/admin/posts/create">
    <button class='btn btn-outline-dark'>NEW POSTS</button>
</a>

{{#each posts}}
    <div class="card text-center mt-4">
        <h3 class="card-header">{{title}}</h3>
        <div class="card-body">
            <h5 class="card-title">{{description}}</h5>
            <p class="card-text">{{content}}</p>
            <a href="/admin/posts/update/{{_id}}" class="btn btn-warning">UPDATE</a>
            <a href="/admin/posts/delete/{{_id}}" class="btn btn-danger">DELETE</a>
        </div>
        <div class="card-footer text-muted">{{date}}</div>
    </div>
{{else}}
    <div class="card text-center">Nenhum post cadastrado</div>
{{/each}}
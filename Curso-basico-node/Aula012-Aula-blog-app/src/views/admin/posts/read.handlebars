<h1>List of Posts</h1>
<hr>

<a href="/admin/posts/create">
    <button class='btn btn-outline-dark'>NEW POSTS</button>
</a>

<table class="table table-dark table-hover mt-3">
    <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">TITLE</th>
          <th scope="col">SLUG</th>
          <th scope="col">DESCRIPTION</th>
          <th scope="col">CONTENT</th>
          <th scope="col">CATEGORY</th>
        </tr>
    </thead>      
    <tbody>
        {{#each posts}}
            <tr>
                <th scope="row">#</th>
                <td>{{title}}</td>
                <td>{{slug}}</td>
                <td>{{description}}</td>
                <td>{{content}}</td>
                <td>{{category}}</td>
                <td>
                    <a href="/admin/posts/update/{{_id}}"><button class="btn btn-outline-light btn-sm" type="submit">Editar</button></a>
                    <a href='/admin/posts/delete/{{_id}}'><button class="btn btn-outline-light btn-sm" type="submit">Excluir</button></a>
                </td>
            </tr>
        {{else}}
        {{/each}}        
    </tbody>
</table>
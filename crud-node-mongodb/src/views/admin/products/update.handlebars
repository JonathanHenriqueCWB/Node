<h1>Update Products</h1>

<form method="post" action="/admin/products/update" class="mt-4">

    <input type="hidden" name="id" value="{{product._id}}">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="{{product.name}}">
        </div>
        <div class="form-group col-md-6">
            <label for="quantity">Quantity</label>
            <input type="number" class="form-control" name="quantity" value="{{product.quantity}}">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="brand">Brand</label>
            <input type="text" class="form-control" name="brand" value="{{product.brand}}">
        </div>
        <div class="form-group col-md-6">
            <label for="category">Category</label>
            <select name="category" class="form-control">
                <option value="0" selected>{{product.category.name}}</option>
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">No registered item</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="description">Descripton</label>
            <textarea class="form-control" name="description" rows="3">{{product.description}}</textarea>
        </div>
    </div>

    <button class="btn btn-outline-warning">UPDATE PRODUCT</button>
</form>
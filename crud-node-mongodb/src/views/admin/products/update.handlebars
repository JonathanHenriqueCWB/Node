<h1>Update products</h1>
<hr>

<form action="/admin/products/update" method="post">

    <input type="hidden" name="id" value={{p._id}}>

    <label for="name">Name:</label><br>
    <input type="text" name="name" id="name" value="{{p.name}}">

    <br><br>

    <label for="category">Category</label><br>
    <input type="text" name="category" id="category" value="{{p.category}}">

    <br><br>

    <label for="quantity">Quantity</label><br>
    <input type="number" name="quantity" id="quantity" value="{{p.quantity}}">

    <br><br>

    <label for="brand">Brand</label><br>
    <input type="text" name="brand" id="brand" value="{{p.brand}}">

    <br><br>

    <label for="description">Description</label><br>
    <textarea name="description" id="description" cols="20" rows="5" placeholder='{{p.description}}'></textarea>

    <br><br>
    <button>CHANGE PRODUCT</button>
</form>
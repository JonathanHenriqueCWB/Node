<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node Passport-local</title>
    <style>
        .success {
            background-color: green; padding: 20px; margin: 30px 0px;
        }
        .error {
            background-color: red; padding: 20px; margin: 30px 0px;
        }
    </style>
</head>
<body>

    <!-- Corpo -->
    <div>{{{body}}}</div>

    <!-- Validações flash -->
    <div>
        {{#if success_msg}}
            <div class="success">{{success_msg}}</div>
        {{/if}}
        {{#if error_msg}}
            <div class="error">{{error_msg}}</div>
        {{/if}}
        {{#if error}}
            <div class="error">{{error}}</div>
        {{/if}}
    </div>

</body>
</html>